---
import Hr from "./Hr.astro";
const currentYear = new Date().getFullYear();

export interface Props {
  noMarginTop?: boolean;
}

const { noMarginTop = false } = Astro.props;
---

<footer class={`${noMarginTop ? "" : "mt-auto"}`}>
  <Hr noPadding />
  <div class="footer-wrapper">
    <div class="wrapper">
      <a class="text-sm" href="/privacy" title="Privacy Policy" target="_blank">
        Privacy Policy
      </a>
    </div>
    <div>|</div>
    <div class="wrapper">
      <span
        >Â© {currentYear}
        <a
          class="text-sm"
          href="https://creativecommons.org/licenses/by/4.0/"
          title="Creative Commons License 4.0"
          target="_blank"
        >
          CC BY 4.0
        </a></span
      >
    </div>
  </div>
</footer>

<style>
  footer {
    @apply w-full;
  }
  .footer-wrapper {
    @apply flex flex-row items-center justify-end gap-4 py-2;
  }
  .link-button {
    @apply my-1 p-2 hover:rotate-6;
  }
  .link-button svg {
    @apply scale-125;
  }
  .wrapper {
    @apply my-2 flex flex-col items-center sm:flex-row;
  }
  .separator {
    @apply hidden sm:inline;
  }
</style>
